<main>
	<%- include('../partials/donorSidebar') %>
	
	<div id="main-wrapper">
		
		<div class="bg-white shadow-sm p-3">
			<span class="me-3" id="sidebar-toggler-btn"><i class="fas fa-bars"></i></span>
			<h5 class="m-0 color-theme d-inline-block"  style="font-family: Cinzel; font-weight: bolder;">Dashboard</h5>
		</div>
		
		<div class="d-flex gap-3 flex-wrap m-4 text-white">
			
			<div class="bg-success rounded p-3" style="width: 100%; text-align: center;">
				<img src="/assets/images/donation.png" alt="" style="width: 10%;">
				<div class="fs-1"><%= numCollectedDonations %></div>
				<div class="fs-5">Donations Made</div>
			</div>
			
			<div class="bg-primary rounded p-3" style="width: 250px;text-align: center;">
				<img src="/assets/images/to be processed.png" alt="" style="width: 40%;">
				<div class="fs-1"><%= numPendingDonations %></div>
				<div class="fs-5">Yet to be Processed</div>
			</div>
			
			<div class="bg-success rounded p-3" style="width: 250px;text-align: center;">
				<img src="/assets/images/to be assigned.png" alt="" style="width: 40%;">
				<div class="fs-1"><%= numAcceptedDonations %></div>
				<div class="fs-5">Agent to be Assigned</div>
			</div>
			
			<div class="bg-danger rounded p-3" style="width: 250px;text-align: center;">
				<img src="/assets/images/not accepted.png" alt="" style="width: 45%;">
				<div class="fs-1"><%= numAssignedDonations %></div>
				<div class="fs-5">Donations not Collected</div>
			</div>
			
		</div>
		
	</div>
</main>